    <script>{{ extra_script }}</script>
{%- endif -%}

<script src="{{ base }}/assets/js/theme{% if site.debug.dist != false %}.min{% endif %}.js"></script>
<script type="text/javascript">
$(function() {
$("pre").each(function() {
  var x = $(this);
  let h = $(this).css("height");
  console.log(h)
  if (h != "100px") {
    x.css("max-height", 100);
    x.css("height", 100);
    console.log("height", x.css("height"));
    console.log("max", x.css("max-height"));
    let butExpand = $("<button>click to expand</button>").appendTo($(this).parent());
    let butCollapse = $("<button>click to collapse</button>").prependTo(x.parent());
    butExpand.show();
    butCollapse.hide();
    
    butExpand.click(function() {
      x.css("max-height", "none");
      x.css("height", "auto");
      console.log("height", x.css("height"));
      console.log("max", x.css("max-height"));
			butExpand.hide();
      butCollapse.show();
      
      

    });
    butCollapse.click(function() {
      x.css("max-height", "100px");
      x.css("height", "100px");
      console.log("height", x.css("height"));
      console.log("max", x.css("max-height"));
			butCollapse.hide();
      butExpand.show();
    });
  }
});
});
</script>
